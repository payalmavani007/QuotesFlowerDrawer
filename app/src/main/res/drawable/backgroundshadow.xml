<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#000"/>
            <corners android:radius="0dp" />
        </shape>
    </item>

    <item
        android:left="0dp"
        android:right="1dp"
        android:top="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="#f7931f"
                android:startColor="#9c1247" />
            <corners android:radius="0dp" />
        </shape>
    </item>
</layer-list>